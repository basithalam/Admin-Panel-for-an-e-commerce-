<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce.Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Ecommerce.Admin.styles.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <div class="admin-shell">
        <aside class="admin-sidebar">
            <div class="admin-brand d-flex align-items-center gap-2 mb-4">
                <span class="brand-icon d-inline-flex align-items-center justify-content-center rounded-circle bg-primary text-white">
                    <i class="bi bi-speedometer2"></i>
                </span>
                <div>
                    <div class="fw-semibold">Ecommerce Admin</div>
                    <small class="text-muted">Control Panel</small>
                </div>
            </div>
            <nav>
                <p class="text-uppercase text-muted mb-2" style="font-size:0.75rem;">Overview</p>
                <ul class="nav flex-column gap-1">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Category" asp-action="Index">
                            <i class="bi bi-tags"></i>
                            <span>Categories</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">
                            <i class="bi bi-box-seam"></i>
                            <span>Products</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <div class="admin-content">
            <header class="admin-topbar d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-layout-sidebar-inset"></i>
                    <span class="fw-semibold">@ViewData["Title"]</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <a class="btn btn-sm btn-outline-light" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-lock"></i> Privacy
                    </a>
                </div>
            </header>
            <main class="admin-main">
                @RenderBody()
            </main>
            <footer class="admin-footer text-muted">
                <div>
                    &copy; @DateTime.Now.Year - Ecommerce.Admin
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
